<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="newsForm" type="com.epam.ogoltsov.form.NewsForm"/>
        <form-bean name="newNewsForm" type="com.epam.ogoltsov.form.NewNewsForm"/>
    </form-beans>

    <!--<global-exceptions>-->
    <!--<exception key="error.global.message" type="java.lang.Exception" path="/WEB-INF/pages/error.jsp"/>-->
    <!--</global-exceptions>-->

    <action-mappings>

        <action path="/news" type="com.epam.ogoltsov.action.NewsActions"
                parameter="method"
                name="newsForm"
                validate="true"
                input="showEditNews"
        >
            <forward name="listNews" path="listNews"/>
            <forward name="showViewNews" path="showViewNews" redirect="true"/>
            <forward name="showEditNews" path="showEditNews" redirect="true"/>
            <forward name="deleteNews" path="/news.do?method=listNews" redirect="true"/>
            <forward name="showAddNews" path="showAddNews" redirect="true"/>
        </action>

        <action path="/newNews" type="com.epam.ogoltsov.action.NewNewsAction"
                parameter="method"
                name="newNewsForm"
                validate="true"
                input="showAddNews">
            <forward name="listNews" path="listNews"/>
            <forward name="showViewNews" path="showViewNews"/>
            <forward name="showAddNews" path="showAddNews" redirect="true"/>
            <forward name="main" path="/news.do?method=listNews" redirect="true"/>
        </action>

        <action
                path="/Locale"
                type="com.epam.ogoltsov.action.LanguageSelectAction"
                parameter="method">
            <forward name="success" path="/news.do?method=listNews"/>
        </action>

    </action-mappings>

    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources parameter="Common"/>

    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml"/>
        <set-property property="moduleAware" value="true"/>
    </plug-in>
    <plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
        <set-property property="contextConfigLocation" value="classpath:applicationContext.xml"/>
    </plug-in>


</struts-config>